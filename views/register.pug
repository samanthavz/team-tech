doctype html
html
  include includes/head.pug
  body(class="registerPage")
    h1 DoggoSwipe
    form(action="/register" method="POST")
      input(type="email" id="email" name="email" placeholder="Email-adres")
      input(type="password" id="password" name="password" placeholder="Password")
      input(type="name" id="name" name="name" placeholder="Name")
      input(type="lastName" id="lastName" name="lastName" placeholder="Last Name")
      input(type="age" id="age" name="age" placeholder="Age")
      input(type="maxAge" id="maxAge" name="maxAge" placeholder="Max Age Doggo")
      button(class="registerBtn2") Sign Up
    img(src='/images/dog.png' class="doggoPic" alt="Pixelated dog" height="300px" width="300px")
