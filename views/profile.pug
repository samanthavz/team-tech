extends template.pug

block content
  div.profile
    div 
      img(src="./images/profilepic.jpg", alt="profile picture")
      h2 #{user.name} #{user.lastname}
      p #{user.status} 
    //- formulier voor profile editten: user info
    form(action="/profile/edit", method="post",)
       h3 Edit Info
       label(for="firstName") First Name
       input(type="text" id="firstName" name="name" value=user.name)
       label(for="lastName") Last Name
       input(type="text" id="lastName" name="lastName" value=user.lastName)
       label(for="age") Age
       input(type="number" id="age" name="age" value=user.age)
       //- div voor css divider
       div.divider
       //- formulier voor profile editten: dog preferences
       label(for="dogAge") Max dog age
       input(type="number" id="dogAge" name="maxAge" value=user.maxAge)
       label(for="breed") preferred breeds
       select(name="breed", id="breed", multiple="multiple", size="5")
         each breed in breeds
           +ras(breed)
       input(type="hidden", name="userId", value=user._id)
       button(type="submit", class="profile-button") Submit edit

  script(src="scripts/profile.js", type="module")
  